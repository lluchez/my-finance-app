<!DOCTYPE html>
<html>
  <head>
    <title>My Finance App</title>
    <%= favicon_link_tag 'logo.ico' %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "home/header" %>
    <div class="container">
      <% flash.each do |name, messages| %>
        <%
          hash = {"error" => "alert-danger", "notice" => "alert-info"}
          alert_class = "alert " + hash[name]
          messages = [messages] if messages.kind_of?(String)
        %>
        <div id="error_explanation" class="<%= alert_class %>">
          <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">&times;</a>
          <ul>
            <% messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
